extends layout
block content
    .container(style="margin-top:50px;")
        for project in projects
            .col-xs-12.col-sm-12.col-md-12.col-lg-12
                h1
                    span(style="margin-right:20px") #{project.ns}/#{project.name}
                    .btn-group.btn-group-xs
                        a.btn.btn-primary(href="/project/#{project.ns}/#{project.name}/proto/index.html",target="_blank") Proto
                        a.btn.btn-default(href="/project/#{project.ns}/#{project.name}/README.md") Doc
                    span(style="font-size:14px;color:#AAA;margin-left:10px;") 最后更新:#{project.update?projectupdate:''}
                p= project.desc
                hr